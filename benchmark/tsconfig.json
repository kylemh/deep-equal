{
  "extends": "../tsconfig.build.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "es5",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
